{
  "name": "mithril-ssr",
  "version": "2.1.0",
  "description": "ssr",
  "main": "index.js",
  "repository": "https://github.com/souricevincent/mithril-ssr-boilerplate.git",
  "scripts": {
    "build:prod": "rm -rf build && webpack --mode production --config webpack.config.js",
    "build:dev": "rm -rf build && webpack --mode development --config webpack.config.js",
    "watch": "rm -rf build && webpack --watch --mode development --config webpack.config.js",
    "start": "nodemon build/server.js",
    "lint": "eslint app/** server/**",
    "lint:fix": "eslint app/** server/** --fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "circular-dependency-plugin": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react": "^7.18.3",
    "nodemon": "^2.0.2",
    "path": "^0.12.7",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin-alt": "^1.4.0"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "koa": "^2.11.0",
    "koa-route": "^3.2.0",
    "koa-static": "^5.0.0",
    "mithril": "^2.0.4",
    "mithril-node-render": "^3.0.0"
  },
  "nodemonConfig": {
    "inspect": true,
    "watch": [
      "build"
    ],
    "ignore": [
      "build/assets/*"
    ],
    "delay": "0"
  },
  "sideEffects": false
}
